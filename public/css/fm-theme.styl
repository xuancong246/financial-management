#top-main-navbar
    margin-bottom 0
#top-main-navbar .navbar-header a
    font-weight bold
    text-transform uppercase
#top-main-navbar #module-menu-items li
    padding 10px 10px
#top-main-navbar #module-menu-items li a
    border 1px solid transparent
    padding 5px 10px
#top-main-navbar #module-menu-items li a:hover
    border 1px solid #EEE
    background-color #F5F5F5
#top-main-navbar #module-menu-items li.active a
    background-image none
    background-color #EEE
    background-repeat no-repeat
    box-shadow none
#top-right-user-navbar
    margin-right 0
#admin-container
    padding-left 0
    padding-right 0
#admin-category, #admin-category .navbar-collapse
    padding-left 0
    padding-right 0
#admin-category .sidebar ul li a
    border-bottom 1px solid #E7E7E7
#admin-body
    border-left 1px solid #E7E7E7
#admin-body h3.page-header
    margin-top 20px
// Customize bootstrap
.page-header
    margin 20px 0 20px
div.required label:before
    color red
    content "*"
    display inline
    font-weight bold
div.validation-error
    color red
div.ui-select-container
    height auto
    padding 6px 5px
div.ui-select-container .ui-select-search
    border none
div.overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 10
    background-color #EEE
    opacity 0.8
.input__percentage
    max-width 80px
div.progress
    margin-bottom 0
div.color-indicator
    width 20px
    height 20px
    display inline-block
