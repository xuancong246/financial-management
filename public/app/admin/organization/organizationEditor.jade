h3.page-header Organization Information
.panel.panel-default
    .panel-body
        form.form-horizontal(name="organizationEditorForm")
            .form-group
                label.col-md-2.control-label(for="name") Name
                .col-md-10
                    input.form-control(name="name", type="type", ng-model="vm.model.organization.name", required)
            .form-group
                label.col-md-2.control-label(for="description") Description
                .col-md-10
                    input.form-control(name="description", type="text", ng-model="vm.model.organization.description")
            .form-group
                label.col-md-2.control-label(for="address") Address
                .col-md-10
                    input.form-control(name="address", type="text", ng-model="vm.model.organization.address")
            .form-group
                .col-md-10.col-md-offset-2
                    .pull-right
                        button.btn.btn-primary(ng-click="vm.update()", ng-disabled="organizationEditorForm.$invalid") Submit
                        | &nbsp;
                        a.btn.btn-default(ui-sref="admin.organizations") Cancel
